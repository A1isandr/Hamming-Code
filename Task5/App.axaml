<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sukiUi="https://github.com/kikipoulet/SukiUI"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="Task5.App"
             RequestedThemeVariant="Default">
    
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="SourceCodePro">
                avares://Task5/Assets/Fonts#Source Code Pro
            </FontFamily>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/DataTemplates/ItemsControlDataTemplates.axaml"/>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>
        <sukiUi:SukiTheme ThemeColor="Green"/>
        
        <materialIcons:MaterialIconStyles/>
        
        <StyleInclude Source="/Themes/Base/ScrollViewerStyles.axaml"/>
        <StyleInclude Source="/Themes/Base/TextBlockStyles.axaml"/>
        
        <StyleInclude Source="/Themes/Suki/GlassCardStyles.axaml"/>
    </Application.Styles>
</Application>

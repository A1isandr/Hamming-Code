<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    
    <DataTemplate DataType="{x:Type system:Byte}" x:Key="HammingCodeDataTemplate">
        <TextBlock
            Text="{Binding .}"
            FontFamily="{StaticResource SourceCodePro}"/>
    </DataTemplate>
        
    <DataTemplate DataType="{x:Type system:Int32}" x:Key="InfoDataTemplate">
        <TextBlock
            Text="{Binding .}"
            FontFamily="{StaticResource SourceCodePro}"/>
    </DataTemplate>
</ResourceDictionary>
